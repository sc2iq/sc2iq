{
	"name": "SC2IQ",
	"image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"configureZshAsDefaultShell": true,
		},
		"ghcr.io/devcontainers/features/azure-cli:1": {
			"installBicep": true,
		},
		"ghcr.io/azure/azure-dev/azd:0": {},
		"ghcr.io/devcontainers/features/powershell:1": {},
		"ghcr.io/devcontainers/features/github-cli": {},
		"ghcr.io/devcontainers/features/python": {},
		"ghcr.io/eitsupi/devcontainer-features/jq-likes:2": {},
		"ghcr.io/devcontainers/features/docker-in-docker": {},
	},
	"customizations": {
		"vscode": {
			"settings": {
				"editor.stickyScroll.defaultModel": "outlineModel",
				"editor.stickyScroll.enabled": true,
				"notebook.stickyScroll.enabled": true,
				"editor.codeActionsOnSave": {
					"source.fixAll": "explicit",
					"source.organizeImports": "explicit"
				}
			},
			"extensions": [
				"dotenv.dotenv-vscode",
				"eamodio.gitlens",
				"EditorConfig.EditorConfig",
				"foxundermoon.shell-format",
				"GitHub.copilot-chat",
				"ms-azuretools.vscode-bicep",
				"ms-azuretools.vscode-docker",
				"ms-vscode.powershell",
				"redhat.vscode-yaml",
			]
		}
	},
	"runArgs": [
		"--env-file",
		".devcontainer/devcontainer.env"
	],
	"onCreateCommand": "bash ./.devcontainer/onCreateCommand.sh",
	"postCreateCommand": "bash ./.devcontainer/postCreateCommand.sh",
	"postStartCommand": "bash ./.devcontainer/postStartCommand.sh",
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace/dummyOne/sc2iq,type=bind",
	"workspaceFolder": "/workspace/dummyOne/sc2iq",
	"mounts": [
		{
			"source": "${localWorkspaceFolder}/../../shared-resources",
			"target": "/workspace/shared-resources",
			"type": "bind",
		}
	]
}
